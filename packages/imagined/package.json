{
  "name": "imagined",
  "version": "0.2.0",
  "description": "A build-time macro system for AI image generation that transforms React components into static images using the Recraft API",
  "keywords": [
    "ai",
    "image-generation",
    "recraft",
    "react",
    "macro",
    "build-time",
    "static-images"
  ],
  "license": "MIT",
  "author": "tone-row",
  "repository": {
    "type": "git",
    "url": "https://github.com/tone-row/imagined.git"
  },
  "homepage": "https://github.com/tone-row/imagined#readme",
  "bugs": {
    "url": "https://github.com/tone-row/imagined/issues"
  },
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/imagined.cjs",
  "module": "dist/imagined.module.js",
  "unpkg": "dist/imagined.umd.js",
  "types": "dist/index.d.ts",
  "bin": {
    "imagined": "./dist/macro.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/imagined.module.js",
      "require": "./dist/imagined.cjs"
    },
    "./macro": {
      "types": "./dist/macro.d.ts",
      "import": "./dist/macro.js"
    }
  },
  "scripts": {
    "build": "microbundle --target node",
    "build:macro": "bun build src/macro.ts --outdir dist --target node --format esm --external react",
    "build:all": "bun run build && bun run build:macro",
    "prepublishOnly": "bun run build:all"
  },
  "files": [
    "src",
    "dist",
    "tsconfig.json"
  ],
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "microbundle": "^0.15.1",
    "react": "^19.0.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  }
}
